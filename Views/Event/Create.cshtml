            </div>
        </div>
    </div>
}

<div>
    @if (string.IsNullOrEmpty(Convert.ToString(Session["Role"])) || Convert.ToString(Session["Role"]).Equals("User"))
    {
        @Html.ActionLink("Back to List", "Index", "Home")
    }
    else
    {
        @Html.ActionLink("Back to List", "AllEvents", "Home")
    }
</div>