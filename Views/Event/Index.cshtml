@model IEnumerable< DB.Event>

@{
    ViewBag.Title = "Index";
}

<h2>My Events</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(e => e.Date))
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Details", "Home", new { id = item.EventID }, htmlAttributes: new { @class = " " })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EventID })
            </td>
        </tr>
    }
</table>